{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DdbReadSchema",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem"
      ],
      "Resource": "arn:aws:dynamodb:REGION:ACCOUNT_ID:table/postnl-eb-schemas"
    },
    {
      "Sid": "EbPutEventsCore",
      "Effect": "Allow",
      "Action": [
        "events:PutEvents"
      ],
      "Resource": "arn:aws:events:REGION:ACCOUNT_ID:event-bus/postnl-core-bus"
    },
    {
      "Sid": "SqsSendToDlq",
      "Effect": "Allow",
      "Action": [
        "sqs:SendMessage"
      ],
      "Resource": "arn:aws:sqs:REGION:ACCOUNT_ID:YOUR_DLQ_NAME"
    }
  ]
}